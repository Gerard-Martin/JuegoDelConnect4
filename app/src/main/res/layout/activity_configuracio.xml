<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/textView"
        android:textSize="@dimen/tm"
        android:layout_marginTop="@dimen/mup"
        android:layout_marginBottom="@dimen/mup"
        app:fontFamily="sans-serif-thin"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scroll"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/alias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mupm"
                android:layout_marginBottom="@dimen/mupm">
                <ImageView
                    android:id="@+id/user"
                    android:layout_width="@dimen/p"
                    android:layout_marginRight="@dimen/mup"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/alias" />
                <EditText
                    android:id="@+id/aliasc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="@integer/ems"
                    android:inputType="textPersonName"
                    android:hint="@string/alias" />
            </LinearLayout>
            <TextView
                android:id="@+id/mida"
                android:layout_marginTop="@dimen/mupm"
                android:layout_marginBottom="@dimen/mupm"
                app:fontFamily="sans-serif-thin"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/midagraella" />
            <SeekBar
                android:id="@+id/sb"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:defaultValue="0"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:max="6"/>
            <LinearLayout
                android:id="@+id/checkBoxl"
                android:layout_marginTop="@dimen/mupm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/mupm">
                <ImageView
                    android:id="@+id/tim"
                    android:layout_width="@dimen/p"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/timer" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/controldetemps"/>
                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/checkBoxl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/mupm">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/mup"
                    android:text="@string/jugarcpu"/>
                <Switch
                    android:id="@+id/checkBox1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tes"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="@dimen/mupm">
                <TextView
                    android:id="@+id/top"
                    app:fontFamily="sans-serif-thin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/configt" />
                <NumberPicker android:id="@+id/numberpicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"  />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/radiobutton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/mupm"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/dificultattext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dificult"
                    app:fontFamily="sans-serif-thin" />
                <RadioGroup
                    android:id="@+id/dificultat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/facil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/nfacil" />
                    <RadioButton
                        android:id="@+id/mig"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nmig" />
                    <RadioButton
                        android:id="@+id/dificil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ndificil" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">
        <Button
            android:id="@+id/comencar"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:onClick="comencar"
            android:layout_height="wrap_content"
            android:text="@string/comencar" />
    </RelativeLayout>
</LinearLayout>